<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Telepon"
    android:orientation="vertical"
    android:background="#E3DDDD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#00BFFF"
        android:layout_marginTop="-40dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

        <ImageView
            android:layout_width="78dp"
            android:layout_height="98dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/baseline_qr_code_scanner_24"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="-100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/baseline_file_upload_24" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginRight="-280dp"
            android:layout_marginTop="-98dp"
            android:src="@drawable/baseline_send_24" />
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#E3DDDD"
            app:cardCornerRadius="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/nama"
            >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write a note [For the split bill]"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    />
        </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/namaTextView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@android:color/black"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/namaTextView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="12sp"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/namaTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="100sp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="Prabowo"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/nomorTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/namaTextView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="140dp"
        android:fontFamily="sans-serif-black"
        android:hint="+628923000"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center_vertical"
        />


    <TextView
        android:id="@+id/mobileTextView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/namaTextView"
        android:layout_marginLeft="170dp"
        android:fontFamily="sans-serif-black"
        android:text="Mobile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center_vertical"/>

</RelativeLayout>
